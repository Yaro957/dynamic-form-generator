[
    {
      "title": "User Profile Form",
      "fields": [
        {
          "label": "Full Name",
          "name": "fullName",
          "type": "text",
          "required": true,
          "placeholder": "Enter your full name"
        },
        {
          "label": "Email Address",
          "name": "email",
          "type": "email",
          "required": true,
          "placeholder": "example@domain.com",
          "validation": "^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$"
        },
        {
          "label": "Gender",
          "name": "gender",
          "type": "radio",
          "options": ["Male", "Female", "Non-binary", "Prefer not to say"],
          "required": true
        },
        {
          "label": "Country",
          "name": "country",
          "type": "select",
          "options": ["USA", "Canada", "India", "Germany", "Japan", "Australia", "Other"],
          "required": true,
          "defaultValue": "USA"
        },
        {
          "label": "Subscribe to Newsletter",
          "name": "newsletter",
          "type": "checkbox",
          "defaultValue": false
        },
        {
          "label": "Interests",
          "name": "interests",
          "type": "multiselect",
          "options": ["Technology", "Sports", "Arts", "Science", "Travel"],
          "required": false
        },
        {
          "label": "Work Experience",
          "name": "workExperience",
          "type": "repeatable",
          "fields": [
            {
              "label": "Company Name",
              "name": "company",
              "type": "text",
              "required": true
            },
            {
              "label": "Role",
              "name": "role",
              "type": "text",
              "required": true
            },
            {
              "label": "Start Date",
              "name": "startDate",
              "type": "date",
              "required": true
            },
            {
              "label": "End Date",
              "name": "endDate",
              "type": "date",
              "required": false,
              "placeholder": "Leave blank if current position"
            },
            {
              "label": "Years",
              "name": "years",
              "type": "number",
              "min": 0,
              "max": 50
            }
          ],
          "addButtonText": "Add Work Experience"
        },
        {
          "label": "Profile Description",
          "name": "description", 
          "type": "textarea",
          "placeholder": "Tell us about yourself",
          "maxLength": 500
        }
      ],
      "submitButtonText": "Save Profile"
    }
  ] 